<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.0" method="install" overwrite="true">
    <name>com_neno</name>
    <creationDate>XXX_DATE_XXX</creationDate>
    <copyright>Copyright (C) XXX_COPYRIGHT_YEAR_XXX. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <author>Jensen Technologies S.L.</author>
    <authorEmail>info@jensen.technology</authorEmail>
    <authorUrl>http://www.jensen.technology</authorUrl>
    <version>XXX_VERSION_XXX</version>
    <description>The complete translation solution for Joomla</description>
    <install>
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
    <uninstall>
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>
    <scriptfile>script.php</scriptfile>
    <!--<update>
        <schemas>
            <schemapath type="mysql">sql/updates</schemapath>
        </schemas>
    </update>-->
    <files folder="front">
        <filename>index.html</filename>
        <filename>neno.php</filename>
    </files>
    <administration>
        <menu img="components/com_neno/assets/images/s_com_neno.png">COM_NENO</menu>
        <submenu>
            <menu link="option=com_neno&amp;view=dashboard" view="dashboard" alt="neno/dashboard">
                COM_NENO_TITLE_DASHBOARD
            </menu>
            <menu link="option=com_neno&amp;view=groupselements" view="groupselements" alt="neno/groupselements">
                COM_NENO_TITLE_GROUPSELEMENTS
            </menu>
            <menu link="option=com_neno&amp;view=editor" view="editor" alt="neno/editor">
                COM_NENO_TITLE_EDITOR
            </menu>
            <menu link="option=com_neno&amp;view=jobs" view="jobs" alt="neno/jobs">
                COM_NENO_TITLE_JOBS
            </menu>
            <menu link="option=com_neno&amp;view=externaltranslations" view="externaltranslations"
                  alt="neno/externaltranslations">
                COM_NENO_TITLE_EXTERNALTRANSLATIONS
            </menu>
        </submenu>
        <files folder="back">
            <filename>access.xml</filename>
            <filename>config.xml</filename>
            <filename>index.html</filename>
            <filename>neno.php</filename>
            <folder>controllers</folder>
            <folder>models</folder>
            <folder>sql</folder>
            <folder>tables</folder>
            <folder>views</folder>
        </files>
        <languages folder="administrator">
            <language tag="en-GB">languages/en-GB/en-GB.com_neno.ini</language>
            <language tag="en-GB">languages/en-GB/en-GB.com_neno.sys.ini</language>
        </languages>
    </administration>

    <updateservers>
        <server type="extension" priority="1" name="com_neno">http://www.neno-translate.com/releases/neno-update.xml
        </server>
    </updateservers>

</extension>
