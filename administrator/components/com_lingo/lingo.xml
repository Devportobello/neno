<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.0" method="upgrade">
    <name>com_lingo</name>
    <creationDate>2014-10-02</creationDate>
    <copyright>Copyright (C) 2014. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <author>Soren Beck Jensen</author>
    <authorEmail>soren@notwebdesign.com</authorEmail>
    <authorUrl>http://www.notwebdesign.com</authorUrl>
    <version>1.0.0</version>
    <description>The complete translation solution for Joomla</description>
    
    <scriptfile>script.php</scriptfile>
    
    <install> <!-- Runs on install -->
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
    <uninstall> <!-- Runs on uninstall -->
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>

    <files folder="site">
        <filename>index.html</filename>
        <filename>lingo.php</filename>
        <filename>controller.php</filename>
        <filename>router.php</filename>
        <folder>views</folder>
        <folder>models</folder>
        <folder>controllers</folder>
        <folder>helpers</folder>
        <folder>assets</folder>
    </files>
    <languages folder="site">
        
			<language tag="en-GB">language/en-GB/en-GB.com_lingo.ini</language>
    </languages>
    <administration>
        <menu img="components/com_lingo/assets/images/s_com_lingo.png" >COM_LINGO</menu>
        <submenu>
            
			<menu link="option=com_lingo&amp;view=translations" view="translations" img="components/com_lingo/assets/images/s_translations.png" alt="Lingo/Translations">COM_LINGO_TITLE_TRANSLATIONS</menu>

			<menu link="option=com_lingo&amp;view=sources" view="sources" img="components/com_lingo/assets/images/s_sources.png" alt="Lingo/Sources">COM_LINGO_TITLE_SOURCES</menu>

        </submenu>
        <files folder="administrator">
            <filename>access.xml</filename>
            <filename>config.xml</filename>
            <filename>controller.php</filename>
            <filename>index.html</filename>
            <filename>lingo.php</filename>
            <folder>controllers</folder>
            <folder>assets</folder>
            <folder>helpers</folder>
            <folder>models</folder>
            <folder>sql</folder>
            <folder>tables</folder>
            <folder>views</folder>
            <folder>language</folder>
        </files>
        <languages folder="administrator">
            
			<language tag="en-GB">language/en-GB/en-GB.com_lingo.ini</language>
			<language tag="en-GB">language/en-GB/en-GB.com_lingo.sys.ini</language>
        </languages>
    </administration>
    <plugins>
        <plugin group="search" plugin="lingo"/>
    </plugins>
    
</extension>
